{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "League Data Schema",
    "type": "object",
    "properties": {
        "scoresFixtures": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "date": {
                        "type": "string",
                        "format": "date",
                        "pattern": "^\\d{2}-\\d{2}-\\d{4}$"
                    },
                    "matches": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "homeTeam": {
                                    "type": "string"
                                },
                                "homeScore": {
                                    "type": "number",
                                    "minimum": 0
                                },
                                "awayTeam": {
                                    "type": "string"
                                },
                                "awayScore": {
                                    "type": "number",
                                    "minimum": 0
                                },
                                "result": {
                                    "type": "string",
                                    "enum": [
                                        "FT"
                                    ]
                                }
                            },
                            "required": [
                                "homeTeam",
                                "homeScore",
                                "awayTeam",
                                "awayScore",
                                "result"
                            ]
                        }
                    }
                },
                "required": [
                    "date",
                    "matches"
                ]
            }
        },
        "leagueTable": {
            "type": "array"
        },
        "topScorers": {
            "type": "array"
        }
    }
}